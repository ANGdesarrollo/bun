{
  "name": "docker-bun",
  "version": "1.0.50",
  "scripts": {
    "lint:fix": "eslint -c .eslintrc ./src --fix",
    "lint": "eslint -c .eslintrc ./src",
    "pre-commit": "lint-staged",
    "pre-check": "pnpm ts-check && pnpm lint",
    "prepare": "husky install",
    "postinstall": "chmod +x .husky/pre-commit",
    "ts:check": "tsc -p tsconfig.json --noEmit",
    "build:start": "bun build src/InitServer.ts --outdir=dist --target bun",
    "test": "bun test",
    "start:dev": "bun run --watch src/InitServer.ts",
    "start:prod": "bun run dist/InitServer.js"
  },
  "dependencies": {
    "@elysiajs/cors": "^0.8.0",
    "@mikro-orm/core": "^6.0.3",
    "@mikro-orm/mongo-highlighter": "^1.0.0",
    "@mikro-orm/mongodb": "^6.0.3",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.8",
    "elysia": "latest",
    "envalid": "^8.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "bun-types": "latest",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2"
  },
  "module": "src/index.js"
}
